<h1>Editando: {{user.name}}</h1>
<form action="/users/update" method="post">
<input type="hidden" name="id" value="{{user.id}}">
<div class="form-control">
    <label for="name">Nome:</label>
    <input type="text" name="name" id="name" placeholder="Digite o nome do usuario" value="{{user.name}}" />
</div>
<div class="form-control">
    <label for="occupation">Profissão:</label>
    <input type="text" name="occupation" id="occupation" placeholder="Digite sua Profissão" value="{{user.occupation}}" />
</div>

<div class="form-control form-checkbox">
    {{#if user.newsletter}}
    <label for="newsletter">Enviar Promoções</label>
    <input type="checkbox" checked name="newsletter" />
    {{else}}
    <input type="checkbox"  name="newsletter" />
    {{/if}}

    
</div>
<input class="form-control" id="btn" type="submit" value="cadastrar">
</form>
<div>

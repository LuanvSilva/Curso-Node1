        <label for="street">Rua:</label>
        <input type="text" name="street" id="street" placeholder="Digite a rua" value="{{user.street}}" />
    </div>
      <div class="form-control">
        <label for="street">Numero:</label>
        <input type="text" name="num" id="num" placeholder="Digite a rua" value="{{user.num}}" />
    </div>
      <div class="form-control">
        <label for="street">Cidade:</label>
        <input type="text" name="city" id="city" placeholder="Digite a rua" value="{{user.city}}" />
    </div>
    <input type="submit" value="Incluir indereço">
    
    </form>
</div>